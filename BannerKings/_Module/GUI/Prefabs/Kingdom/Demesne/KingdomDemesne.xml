<Prefab>
	<Variables>
	</Variables>
	<Constants>
		<Constant Name="Kingdom.Item.Tuple.Width" BrushLayer="Default" BrushName="Kingdom.Item.Tuple" BrushValueType="Width" />
		<Constant Name="Kingdom.Item.Tuple.Height" BrushLayer="Default" BrushName="Kingdom.Item.Tuple"
		          BrushValueType="Height" />

		<Constant Name="Kingdom.Armies.Sort.1.Width" BrushLayer="Default" BrushName="Kingdom.Armies.Sort.1"
		          BrushValueType="Width" />
		<Constant Name="Kingdom.Armies.Sort.1.Height" BrushLayer="Default" BrushName="Kingdom.Armies.Sort.1"
		          BrushValueType="Height" />

		<Constant Name="Kingdom.Armies.Sort.2.Width" BrushLayer="Default" BrushName="Kingdom.Armies.Sort.2"
		          BrushValueType="Width" />
		<Constant Name="Kingdom.Armies.Sort.2.Height" BrushLayer="Default" BrushName="Kingdom.Armies.Sort.2"
		          BrushValueType="Height" />

		<Constant Name="Kingdom.Armies.Sort.3.Width" BrushLayer="Default" BrushName="Kingdom.Armies.Sort.3"
		          BrushValueType="Width" />
		<Constant Name="Kingdom.Armies.Sort.3.Height" BrushLayer="Default" BrushName="Kingdom.Armies.Sort.3"
		          BrushValueType="Height" />

		<Constant Name="Kingdom.Armies.Sort.4.Width" BrushLayer="Default" BrushName="Kingdom.Armies.Sort.4"
		          BrushValueType="Width" />
		<Constant Name="Kingdom.Armies.Sort.4.Height" BrushLayer="Default" BrushName="Kingdom.Armies.Sort.4"
		          BrushValueType="Height" />

		<Constant Name="Kingdom.Armies.Sort.5.Width" BrushLayer="Default" BrushName="Kingdom.Armies.Sort.5"
		          BrushValueType="Width" />
		<Constant Name="Kingdom.Armies.Sort.5.Height" BrushLayer="Default" BrushName="Kingdom.Armies.Sort.5"
		          BrushValueType="Height" />

		<Constant Name="Kingdom.Armies.Sort.6.Width" BrushLayer="Default" BrushName="Kingdom.Armies.Sort.6"
		          BrushValueType="Width" />
		<Constant Name="Kingdom.Armies.Sort.6.Height" BrushLayer="Default" BrushName="Kingdom.Armies.Sort.6"
		          BrushValueType="Height" />

		<Constant Name="Kingdom.Scroll.Header.Width" BrushLayer="Default" BrushName="Scroll.Header" BrushValueType="Width" />
		<Constant Name="Kingdom.Scroll.Header.Height" BrushLayer="Default" BrushName="Scroll.Header" BrushValueType="Height" />

		<Constant Name="ScrollableArea.Margin.Bottom" Additive="8" Value="!Kingdom.Item.Tuple.Height" />


	</Constants>
	<Parameters>
	</Parameters>
	<VisualDefinitions>
	</VisualDefinitions>
	<Window>
		<Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" IsVisible="@IsSelected">
			<Children>

				<ListPanel WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent">
					<Children>

						<!--Left Panel-->
						<BrushListPanel WidthSizePolicy="CoverChildren" HeightSizePolicy="StretchToParent" VerticalAlignment="Bottom"
						                MarginTop="6" MarginBottom="9" MarginLeft="0" Brush="Frame1Brush"
						                StackLayout.LayoutMethod="VerticalBottomToTop">
							<Children>

								<ListPanel WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" RenderLate="true">
									<Children>

										<ListPanel DataSource="{ArmySortController}" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren">
											<Children>

												<SortButtonWidget DoNotPassEventsToChildren="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed"
												                  SuggestedWidth="!Kingdom.Armies.Sort.1.Width"
												                  SuggestedHeight="!Kingdom.Armies.Sort.1.Height" Brush="Kingdom.Armies.Sort.1"
												                  Command.Click="ExecuteSortByName" IsSelected="@IsNameSelected" SortState="@NameState"
												                  SortVisualWidget="TextWidget\NameSortVisualWidget" UpdateChildrenStates="true">
													<Children>
														<TextWidget Id="TextWidget" DataSource="{..}" WidthSizePolicy="CoverChildren"
														            HeightSizePolicy="CoverChildren" HorizontalAlignment="Center" VerticalAlignment="Center"
														            Brush="Kingdom.SortButtons.Text" ClipContents="false" Text="@ArmyNameText">
															<Children>
																<BrushWidget Id="NameSortVisualWidget" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed"
																             SuggestedWidth="20" SuggestedHeight="20" PositionXOffset="20" HorizontalAlignment="Right"
																             VerticalAlignment="Center" Brush="ArmyManagement.Sort.ArrowBrush" />
															</Children>
														</TextWidget>
													</Children>
												</SortButtonWidget>

												<SortButtonWidget DoNotPassEventsToChildren="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed"
												                  SuggestedWidth="!Kingdom.Armies.Sort.2.Width"
												                  SuggestedHeight="!Kingdom.Armies.Sort.2.Height" Brush="Kingdom.Armies.Sort.2"
												                  Command.Click="ExecuteSortByOwner" IsSelected="@IsOwnerSelected" SortState="@OwnerState"
												                  SortVisualWidget="TextWidget\OwnerSortVisualWidget" UpdateChildrenStates="true">
													<Children>
														<TextWidget Id="TextWidget" DataSource="{..}" WidthSizePolicy="CoverChildren"
														            HeightSizePolicy="CoverChildren" HorizontalAlignment="Center" VerticalAlignment="Center"
														            Brush="Kingdom.SortButtons.Text" ClipContents="false" Text="@LeaderText">
															<Children>
																<BrushWidget Id="OwnerSortVisualWidget" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed"
																             SuggestedWidth="20" SuggestedHeight="20" PositionXOffset="20" HorizontalAlignment="Right"
																             VerticalAlignment="Center" Brush="ArmyManagement.Sort.ArrowBrush" />
															</Children>
														</TextWidget>
													</Children>
												</SortButtonWidget>

												<SortButtonWidget DoNotPassEventsToChildren="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed"
												                  SuggestedWidth="!Kingdom.Armies.Sort.3.Width"
												                  SuggestedHeight="!Kingdom.Armies.Sort.3.Height" Brush="Kingdom.Armies.Sort.3"
												                  Command.Click="ExecuteSortByStrength" IsSelected="@IsStrengthSelected"
												                  SortState="@StrengthState" SortVisualWidget="TextWidget\StrengthSortVisualWidget"
												                  UpdateChildrenStates="true">
													<Children>
														<TextWidget Id="TextWidget" DataSource="{..}" WidthSizePolicy="CoverChildren"
														            HeightSizePolicy="CoverChildren" HorizontalAlignment="Center" VerticalAlignment="Center"
														            Brush="Kingdom.SortButtons.Text" ClipContents="false" Text="@StrengthText">
															<Children>
																<BrushWidget Id="StrengthSortVisualWidget" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed"
																             SuggestedWidth="20" SuggestedHeight="20" PositionXOffset="16" HorizontalAlignment="Right"
																             VerticalAlignment="Center" Brush="ArmyManagement.Sort.ArrowBrush" />
															</Children>
														</TextWidget>
													</Children>
												</SortButtonWidget>

												<SortButtonWidget DoNotPassEventsToChildren="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed"
												                  SuggestedWidth="!Kingdom.Armies.Sort.4.Width"
												                  SuggestedHeight="!Kingdom.Armies.Sort.4.Height" Brush="Kingdom.Armies.Sort.4"
												                  Command.Click="ExecuteSortByParties" IsSelected="@IsPartiesSelected"
												                  SortState="@PartiesState" SortVisualWidget="TextWidget\PartySizeSortVisualWidget"
												                  UpdateChildrenStates="true">
													<Children>
														<TextWidget Id="TextWidget" DataSource="{..}" WidthSizePolicy="CoverChildren"
														            HeightSizePolicy="CoverChildren" HorizontalAlignment="Center" VerticalAlignment="Center"
														            Brush="Kingdom.SortButtons.Text" ClipContents="false" Text="@PartiesText">
															<Children>
																<BrushWidget Id="PartySizeSortVisualWidget" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed"
																             SuggestedWidth="20" SuggestedHeight="20" PositionXOffset="20" HorizontalAlignment="Right"
																             VerticalAlignment="Center" Brush="ArmyManagement.Sort.ArrowBrush" />
															</Children>
														</TextWidget>
													</Children>
												</SortButtonWidget>

												<SortButtonWidget DoNotPassEventsToChildren="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed"
												                  SuggestedWidth="!Kingdom.Armies.Sort.5.Width"
												                  SuggestedHeight="!Kingdom.Armies.Sort.5.Height" Brush="Kingdom.Armies.Sort.5"
												                  Command.Click="ExecuteSortByDistance" IsSelected="@IsDistanceSelected"
												                  SortState="@DistanceState" SortVisualWidget="TextWidget\DistanceSortVisualWidget"
												                  UpdateChildrenStates="true" RenderLate="true">
													<Children>
														<TextWidget Id="TextWidget" DataSource="{..}" WidthSizePolicy="CoverChildren"
														            HeightSizePolicy="CoverChildren" HorizontalAlignment="Center" VerticalAlignment="Center"
														            Brush="Kingdom.SortButtons.Text" ClipContents="false" Text="@LocationText">
															<Children>
																<BrushWidget Id="DistanceSortVisualWidget" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed"
																             SuggestedWidth="20" SuggestedHeight="20" PositionXOffset="20" HorizontalAlignment="Right"
																             VerticalAlignment="Center" Brush="ArmyManagement.Sort.ArrowBrush" />
															</Children>
														</TextWidget>
													</Children>
												</SortButtonWidget>

												<Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="!Kingdom.Scroll.Header.Width"
												        SuggestedHeight="!Kingdom.Scroll.Header.Height" Sprite="StdAssets\scroll_header" ExtendRight="3"
												        ExtendTop="6" ExtendLeft="3" ExtendBottom="4" HorizontalAlignment="Right" />

											</Children>
										</ListPanel>

									</Children>
								</ListPanel>

								<ListPanel WidthSizePolicy="CoverChildren" HeightSizePolicy="StretchToParent">
									<Children>

										<!--Clan List Scrollable Panel-->
										<ScrollablePanel WidthSizePolicy="CoverChildren" HeightSizePolicy="StretchToParent" MarginLeft="3"
										                 MarginBottom="!ScrollableArea.Margin.Bottom" AutoHideScrollBars="true"
										                 ClipRect="ArmyListClipRect" InnerPanel="ArmyListClipRect\ArmiesListContainer"
										                 VerticalScrollbar="..\ArmiesListScrollbar\Scrollbar">
											<Children>

												<Widget Id="ArmyListClipRect" WidthSizePolicy="CoverChildren" HeightSizePolicy="StretchToParent"
												        ClipContents="true">
													<Children>
														<ListPanel Id="ArmiesListContainer" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren"
														           StackLayout.LayoutMethod="VerticalBottomToTop">
															<Children>

																<ListPanel Id="ArmiesList" DataSource="{Armies}" WidthSizePolicy="CoverChildren"
																           HeightSizePolicy="CoverChildren" StackLayout.LayoutMethod="VerticalBottomToTop">
																	<ItemTemplate>
																		<ArmyTuple ButtonType="Radio" />
																	</ItemTemplate>
																</ListPanel>

																<Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="!Kingdom.Item.Tuple.Width"
																        SuggestedHeight="!Kingdom.Item.Tuple.Height" HorizontalAlignment="Left">
																	<Children>

																		<ButtonWidget DoNotPassEventsToChildren="true" WidthSizePolicy="StretchToParent"
																			HeightSizePolicy="StretchToParent" Brush="Kingdom.CreateArmy.Tuple"
																			Command.Click="ExecuteManageArmy" IsEnabled="@CanCreateArmy" UpdateChildrenStates="true">
																			<Children>
																				<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent"
																					Brush="Kingdom.Policies.Action.Item.Text" Text="@CreateArmyText" />
																				<HintWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent"
																					DataSource="{CreateArmyHint}" Command.HoverBegin="ExecuteBeginHint"
																					Command.HoverEnd="ExecuteEndHint" IsDisabled="true" />
																			</Children>
																		</ButtonWidget>

																		<HintWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent"
																			DataSource="{CreateArmyHint}" Command.HoverBegin="ExecuteBeginHint"
																			Command.HoverEnd="ExecuteEndHint" IsEnabled="false" />
																	</Children>
																</Widget>

															</Children>
														</ListPanel>

													</Children>
												</Widget>

											</Children>
										</ScrollablePanel>

										<Standard.VerticalScrollbar Id="ArmiesListScrollbar" WidthSizePolicy="CoverChildren"
										                            HeightSizePolicy="StretchToParent" HorizontalAlignment="Right" MarginRight="2"
										                            MarginLeft="2" MarginBottom="3" />

									</Children>
								</ListPanel>
							</Children>
						</BrushListPanel>

						<!--Right Side-->
						<ButtonWidget Command.Click="ShowHierarchy" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedHeight="89"
						              SuggestedWidth="123" HorizontalAlignment="Center" Brush="Encyclopedia.SubPage.Element">
							<Children>
								<ImageIdentifierWidget Id="ElementImage" DataSource="{ImageIdentifier}" DoNotAcceptEvents="true"
								                       WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" ImageId="@Id"
								                       AdditionalArgs="@AdditionalArgs" ImageTypeCode="@ImageTypeCode"
								                       HorizontalAlignment="Center" MarginRight="3" MarginLeft="3" MarginBottom="3"
								                       MarginTop="3" />
								<HintWidget DataSource="{Hint}" DoNotAcceptEvents="true" HeightSizePolicy="StretchToParent"
								            WidthSizePolicy="StretchToParent" Command.HoverBegin="ExecuteBeginHint"
								            Command.HoverEnd="ExecuteEndHint" />
								<Widget DoNotAcceptEvents="true" HeightSizePolicy="StretchToParent" WidthSizePolicy="StretchToParent"
								        Sprite="SelectionBorder@2x_9" IsVisible="@IsActiveUnit" />
							</Children>
						</ButtonWidget>

					</Children>
				</ListPanel>

			</Children>
		</Widget>
	</Window>
</Prefab>